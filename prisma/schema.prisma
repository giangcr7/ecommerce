generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// 1. MODEL PHÂN QUYỀN & NGƯỜI DÙNG
// --------------------------------------

model Role {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  users       User[]
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String
  fullName    String?
  address     String?
  phone       String?
  avatar      String?
  accountType String?  @default("local")
  createdAt   DateTime @default(now())

  roleId Int?
  role   Role? @relation(fields: [roleId], references: [id])

  // Quan hệ ngược
  orders Order[]
  cart   Cart? // [MỚI] Mỗi User có 1 giỏ hàng
}

// --------------------------------------
// 2. MODEL SẢN PHẨM & DANH MỤC
// --------------------------------------

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  products    Product[]
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      Int
  image      String?
  detailDesc String?  @db.Text
  shortDesc  String?
  quantity   Int      @default(0)
  sold       Int      @default(0)
  factory    String?
  target     String?
  createdAt  DateTime @default(now())

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])

  // Quan hệ ngược
  orderItems OrderItem[]
  cartItems  CartItem[] // [MỚI] Sản phẩm nằm trong giỏ hàng
}

// --------------------------------------
// 3. MODEL GIỎ HÀNG (CART) - [MỚI HOÀN TOÀN]
// --------------------------------------

model Cart {
  id     Int  @id @default(autoincrement())
  userId Int  @unique // 1 User chỉ có 1 giỏ hàng
  user   User @relation(fields: [userId], references: [id])

  items     CartItem[] // Giỏ hàng chứa nhiều sản phẩm
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id Int @id @default(autoincrement())

  cartId Int
  cart   Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)

  productId Int
  product   Product @relation(fields: [productId], references: [id])

  quantity Int @default(1)

  // Đảm bảo trong 1 giỏ hàng, 1 sản phẩm chỉ xuất hiện 1 dòng (nếu thêm trùng thì tăng số lượng)
  @@unique([cartId, productId])
}

// --------------------------------------
// 4. MODEL ĐƠN HÀNG (ORDER) - [ĐÃ CẬP NHẬT]
// --------------------------------------

model Order {
  id Int @id @default(autoincrement())

  // Thông tin người nhận (Lưu cứng tại thời điểm đặt hàng)
  fullName String // [MỚI] Tên người nhận
  phone    String // [MỚI] SĐT người nhận
  address  String // [MỚI] Địa chỉ giao hàng
  note     String? // Ghi chú

  totalPrice Float // Tổng tiền
  status     String   @default("PENDING") // PENDING, SHIPPING, COMPLETED, CANCELLED
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])

  items OrderItem[]
}

model OrderItem {
  id Int @id @default(autoincrement())

  orderId Int
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade) // Xóa đơn hàng thì xóa luôn chi tiết

  productId Int
  product   Product @relation(fields: [productId], references: [id])

  quantity Int
  price    Float // Lưu giá tại thời điểm mua (để sau này giá SP đổi không ảnh hưởng đơn cũ)
}
