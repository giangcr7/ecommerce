<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Create Product - <%= title %>
    </title>

    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        $(document).ready(() => {
            $("#imageInput").change(function (e) {
                const file = e.target.files[0];
                if (file) {
                    const imgURL = URL.createObjectURL(file);
                    $("#imagePreview").attr("src", imgURL);
                    $("#imagePreview").css({ "display": "block" });
                }
            });
        });
    </script>
</head>

<body class="sb-nav-fixed">
    <%- include('../partials/header') %>

        <div id="layoutSidenav">
            <%- include('../partials/sidebar') %>

                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Create Product</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admin/product">Products</a></li>
                                <li class="breadcrumb-item active">Create</li>
                            </ol>

                            <% if(typeof error !=='undefined' && error.length> 0) { %>
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <%= error %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                                <% } %>

                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <i class="fas fa-box-open me-1"></i>
                                            Thêm sản phẩm mới
                                        </div>
                                        <div class="card-body">
                                            <form method="POST" action="/admin/product/create"
                                                enctype="multipart/form-data">

                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            <input class="form-control" id="name" name="name"
                                                                type="text" placeholder="Tên sản phẩm" required />
                                                            <label for="name">Tên sản phẩm (Name)</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-floating">
                                                            <input class="form-control" id="price" name="price"
                                                                type="number" min="0" placeholder="Giá tiền" required />
                                                            <label for="price">Giá tiền (Price)</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            <input class="form-control" id="quantity" name="quantity"
                                                                type="number" min="0" value="0" required />
                                                            <label for="quantity">Số lượng (Quantity)</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-floating">
                                                            <input class="form-control" id="factory" name="factory"
                                                                type="text" placeholder="Nhà sản xuất" />
                                                            <label for="factory">Hãng sản xuất (Factory)</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            <select class="form-select" id="category" name="categoryId"
                                                                required>
                                                                <option value="" disabled selected>-- Chọn danh mục --
                                                                </option>

                                                                <% if(categories && categories.length> 0) { %>
                                                                    <% categories.forEach(cat=> { %>
                                                                        <option value="<%= cat.id %>">
                                                                            <%= cat.name %>
                                                                        </option>
                                                                        <% }) %>
                                                                            <% } %>
                                                            </select>
                                                            <label for="category">Danh mục sản phẩm (Category)</label>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-floating">
                                                            <input class="form-control" id="shortDesc" name="shortDesc"
                                                                type="text" placeholder="Mô tả ngắn" />
                                                            <label for="shortDesc">Mô tả ngắn (Short Desc)</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="detailDesc" class="form-label fw-bold">Mô tả chi
                                                        tiết</label>
                                                    <textarea class="form-control" id="detailDesc" name="detailDesc"
                                                        rows="5" placeholder="Nhập thông tin chi tiết..."></textarea>
                                                </div>

                                                <div class="mb-3 p-3 border rounded bg-light">
                                                    <label for="imageInput" class="form-label fw-bold">Ảnh sản
                                                        phẩm</label>
                                                    <input class="form-control" type="file" id="imageInput" name="image"
                                                        accept="image/*">

                                                    <div class="mt-3 text-center">
                                                        <img id="imagePreview" src="" alt="Preview Image"
                                                            style="display: none; width: 200px; height: 200px; object-fit: contain; border: 2px dashed #ccc; border-radius: 5px;">
                                                        <div class="small text-muted mt-1">Xem trước ảnh</div>
                                                    </div>
                                                </div>

                                                <div class="mt-4 mb-0 d-flex justify-content-end gap-2">
                                                    <a href="/admin/product" class="btn btn-secondary">Quay lại</a>
                                                    <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                        </div>
                    </main>

                    <%- include('../partials/footer') %>
                </div>
        </div>

        <%- include('../partials/scripts') %>
</body>

</html>