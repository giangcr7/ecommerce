<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Manage Products - <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <style>
        .product-img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #dee2e6;
        }
    </style>
</head>

<body class="sb-nav-fixed">

    <%- include('../partials/header') %>

        <div id="layoutSidenav">
            <%- include('../partials/sidebar') %>

                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Manage Products</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active">Products</li>
                            </ol>

                            <% if(typeof success !=='undefined' && success.length> 0) { %>
                                <div class="alert alert-success alert-dismissible fade show">
                                    <%= success %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                                <% } %>

                                    <% if(typeof error !=='undefined' && error.length> 0) { %>
                                        <div class="alert alert-danger alert-dismissible fade show">
                                            <%= error %>
                                                <button type="button" class="btn-close"
                                                    data-bs-dismiss="alert"></button>
                                        </div>
                                        <% } %>

                                            <div class="card mb-4">
                                                <div
                                                    class="card-header d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <i class="fas fa-box me-1"></i>
                                                        Product List
                                                    </div>
                                                    <a href="/admin/product/create" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-plus"></i> Add New Product
                                                    </a>
                                                </div>
                                                <div class="card-body">
                                                    <table id="datatablesSimple">
                                                        <thead>
                                                            <tr>
                                                                <th>ID</th>
                                                                <th>Image</th>
                                                                <th>Name</th>
                                                                <th>Price</th>
                                                                <th>Qty</th>
                                                                <th>Sold</th>
                                                                <th>Factory</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% if(products && products.length> 0) { %>
                                                                <% products.forEach(product=> { %>
                                                                    <tr>
                                                                        <td>
                                                                            <%= product.id %>
                                                                        </td>

                                                                        <td>
                                                                            <% if(product.image) { let
                                                                                imgUrl=product.image;
                                                                                if(!imgUrl.startsWith('http')) {
                                                                                imgUrl='/' +
                                                                                imgUrl.replace(/^public[\\/]/, ''
                                                                                ).replace(/\\/g, '/' ); } %>
                                                                                <img src="<%= imgUrl %>"
                                                                                    class="product-img"
                                                                                    alt="Product Image">
                                                                                <% } else { %>
                                                                                    <span>No Image</span>
                                                                                    <% } %>
                                                                        </td>

                                                                        <td><strong>
                                                                                <%= product.name %>
                                                                            </strong></td>

                                                                        <td>
                                                                            <%= product.price.toLocaleString('vi-VN') %>
                                                                                đ
                                                                        </td>

                                                                        <td>
                                                                            <%= product.quantity %>
                                                                        </td>
                                                                        <td>
                                                                            <%= product.sold %>
                                                                        </td>
                                                                        <td>
                                                                            <%= product.factory %>
                                                                        </td>

                                                                        <td>
                                                                            <div style="display: flex; gap: 5px;">
                                                                                <a href="/admin/product/edit/<%= product.id %>"
                                                                                    class="btn btn-warning btn-sm">
                                                                                    <i class="fas fa-edit"></i>
                                                                                </a>

                                                                                <form
                                                                                    action="/admin/product/delete/<%= product.id %>"
                                                                                    method="POST"
                                                                                    onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm: <%= product.name %>?');">
                                                                                    <button type="submit"
                                                                                        class="btn btn-danger btn-sm">
                                                                                        <i class="fas fa-trash"></i>
                                                                                    </button>
                                                                                </form>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                    <% }) %>
                                                                        <% } else { %>
                                                                            <tr>
                                                                                <td colspan="8" class="text-center">Chưa
                                                                                    có sản phẩm nào!</td>
                                                                            </tr>
                                                                            <% } %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                        </div>
                    </main>

                    <%- include('../partials/footer') %>
                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/datatables-simple-demo.js"></script>

</body>

</html>